<div class="navbar navbar-inverse navbar-fixed-top" role="navigation" style="z-index: 4;">
    <div class="container">
        <div class="navbar-header">

            <a class="navbar-brand" href="/" style="margin-top:-4px;"><i class="glyphicon glyphicon-home"></i> 西示内网</a>
        </div>
        <div class="collapse navbar-collapse" style="">
            <ul class="nav navbar-nav" id="headNav">
                <!--<li><a href="/user/v">管理</a></li>-->
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <% if (user && user.id) { %>
                <li class="dropdown">
                    <a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown">
                        <b id="userField" uid=<%= user.id%>><%= user.name || ''%></b>
                        <b class="caret"></b>
                    </a>
                    <script>
                        (function() {
                            $('#headNav li').each(function(i, o) {
                                if($(o).children('a').attr('href') == window.location.pathname)
                                    $(o).addClass('active').siblings().removeClass('active');
                            })
                        })()
                    </script>
                    <ul class="dropdown-menu">
                        <li><a href="/workOvertime/v?uid=<%= user.id%>">加班</a></li>
                        <li><a href="/logout">注销</a></li>

                    </ul>
                </li>
                <% } else { %>
                <li>
                    <a href="/login/v" class="cbtn" style="color:#ffffff;">登录</a>
                </li>
                <% } %>

            </ul>
        </div>
        <script>
            function navToDetail() {
                var uf = $('#userField');
                if(uf.length > 0){
                    location.href = uf.attr('uid') ? '/user/v/' + uf.attr('uid') : '/login/v';
                }
            }
        </script>

    </div>
</div>